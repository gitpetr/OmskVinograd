<h1>Ваша корзина</h1>
<% if @cart.empty? %>
  <p>Ваша корзина пуста</p>
  <% else %>
<%= link_to 'Очистить корзину', cart_clear_path %>
<% end %>

<% total = 0 %>

<ul>
<% @cart.each do | id, quantity | %>
  <% product = Pic.find_by_id(id) %>
  <li>
   <p> <%= quantity %> <%= link_to product.title, product %>
     <%= product.price * quantity %> Руб.</p>
  </li>

  <% total += quantity * product.price %>
  <% end %>
</ul>
<p class="total"><b>
Итого: <%= total %> Руб.</b>
</p>